<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@id/bottomNavigation">

        <!-- pantalla titulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactos_de_emergencia"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- contactos de emergencia -->

        <!-- Contacto 1: Bomberos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bomberos_de_chile"
                android:contentDescription="@string/llamar_a_bomberos"
                android:scaleType="fitCenter" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bomberos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_mero_132"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/llamar_bomberos"
                android:onClick="callBomberos"
                android:scaleType="fitCenter"
                android:src="@drawable/phone_call" />
        </LinearLayout>

        <!-- Contacto 2: Carabineros -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/carabineros_de_chile"
                android:contentDescription="@string/carabineros_y_policia_de_chile"
                android:scaleType="fitCenter" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carabineros"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_mero_133"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/llamar_carabineros"
                android:onClick="callCarabineros"
                android:scaleType="fitCenter"
                android:src="@drawable/phone_call" />
        </LinearLayout>

        <!-- Contacto 3: Ambulancia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ambulancia"
                android:scaleType="fitCenter"
                android:contentDescription="@string/ambulanciaicon" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ambulancia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_mero_131"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/llamar_ambulancia"
                android:onClick="callAmbulance"
                android:scaleType="fitCenter"
                android:src="@drawable/phone_call" />
        </LinearLayout>

        <!-- Contacto 4: CONAF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_conaf_arbol"
                android:scaleType="fitCenter"
                android:contentDescription="@string/conaficon" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/conaf"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_mero_130"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone_call"
                android:scaleType="fitCenter"
                android:background="?android:selectableItemBackground"
                android:contentDescription="@string/llamar_conaf"
                android:onClick="callConaf" />
        </LinearLayout>
    </LinearLayout>

    <!-- barra de navegaciÃ³n -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/userButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/usuariobutton"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/inicio"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/house_outline" />

        <ImageButton
            android:id="@+id/notificationsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/notificacionesacc"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/notification_icon" />
    </LinearLayout>
</RelativeLayout>
